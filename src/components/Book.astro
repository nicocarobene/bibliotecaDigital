---
export interface Prop{
    id: string
    title: string
    img: string
}
const {
    title,
    img,
    id,
    author,
    opinion
}= Astro.props
---

<a href={id} class="hover:scale-105 inline-block transition-all hover:contrast-125 hover:shadow-2xl">
    <img 
    alt={`Portada del libro: ${title}`}
    class="aspect-[389/500] h-full object-cover w-full max-w-full rounded"
    src={img}
    style={`view-transition-name: book-${id}`}>
</a>